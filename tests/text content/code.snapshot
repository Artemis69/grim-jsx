/**
 * Using {} here will lead to an inserting text as innerHTML, but we need more safety
 */

function StylishText(text) {
  let c, c1;

  return (
    <div ref={c}>
      <span style={{ color: '#f67288', 'font-size': '1.25rem' }} textContent={text} />
      <span ref={c1}> Another Span </span>
    </div>
  )
}